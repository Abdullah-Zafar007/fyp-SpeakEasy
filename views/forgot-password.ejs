<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forgot Password</title>
  <link rel="stylesheet" href="/styles/LR.css" />
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-content">
        <h1>Reset Your Password</h1>
        <p>Enter your email to receive a password reset link.</p>

        <% if (typeof error !== "undefined") { %>
          <p style="color: red;"><%= error %></p>
        <% } %>
        <% if (typeof message !== "undefined") { %>
          <p style="color: green;"><%= message %></p>
        <% } %>

        <form id="forgot-form">
          <input
            id="email"
            name="email"
            type="email"
            placeholder="Email"
            class="input-field"
            required
          />
          <button type="submit" class="login-button">Send Reset Link</button>
        </form>

        <a href="/login" class="create-account">‚Üê Back to Login</a>
      </div>
    </div>

    <div class="illustration">
      <img src="/images/Screenshot (528).png" alt="Speech Therapy" />
    </div>
  </div>

  <script>
    document.getElementById("forgot-form").addEventListener("submit", function (e) {
      e.preventDefault();

      const email = document.getElementById("email").value.trim();
      if (!email) return alert("Please enter your email.");

      fetch("/forgot-password", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email }),
      })
      .then(res => res.text())  // Expecting an EJS-rendered HTML response
      .then(html => {
        // Replace current page with new content (e.g., message or error from backend)
        document.open();
        document.write(html);
        document.close();
      })
      .catch(err => {
        console.error(err);
        alert("Something went wrong. Please try again.");
      });
    });
  </script>
</body>
</html>
