        /* General section padding */
.section {
  padding: 20px;
  background-color: var(--secondary-color);
  border-radius: 8px;
  margin-bottom: 30px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

/* Heading */
.section h2 {
  color: var(--primary-color);
  font-size: 1.5rem;
  margin-bottom: 20px;
}

/* Form field labels */
.section label {
  font-weight: bold;
  color: var(--text-color);
  display: block;
  margin-bottom: 5px;
}

/* Input and textarea */
.section input[type="text"],
.section input[type="date"],
.section select,
.section textarea {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-family: inherit;
  margin-bottom: 15px;
  transition: border-color 0.2s ease;
}

.section input:focus,
.section textarea:focus,
.section select:focus {
  border-color: var(--primary-color);
  outline: none;
}

/* File input */
.section input[type="file"] {
  margin-top: 5px;
}

/* Submit button */
.section button[type="submit"] {
  background-color: var(--primary-color);
  color: white;
  padding: 10px 18px;
  font-size: 1rem;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.section button[type="submit"]:hover {
  background-color: #006666;
}

/* Suggested Lessons section */
#lessonList {
  margin-top: 10px;
  padding-left: 15px;
}

#lessonList li {
  margin-bottom: 10px;
}

#lessonList li a {
  text-decoration: none;
  color: var(--primary-color);
  font-weight: 500;
  transition: color 0.2s ease;
}

#lessonList li a:hover {
  color: #004c4c;
  text-decoration: underline;
}

/* Responsive tweak */
@media screen and (max-width: 600px) {
  .section {
    padding: 15px;
  }

  .section h2 {
    font-size: 1.3rem;
  }

  .section button[type="submit"] {
    width: 100%;
  }
}
.styled-lesson-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-top: 15px;
  padding-left: 0;
}

.styled-lesson-list li {
  list-style: none;
  background-color: var(--secondary-color);
