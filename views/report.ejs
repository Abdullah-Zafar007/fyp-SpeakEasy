            background-color: #f8fdfd;
            color: var(--text-color);
        }

        header {
            background-color: var(--primary-color);
            color: white;
            padding: 30px 20px;
            text-align: center;
            border-bottom: 4px solid #006666;
        }

        header .logo {
            font-size: 1.5em;
            font-weight: bold;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        header .contact-info {
