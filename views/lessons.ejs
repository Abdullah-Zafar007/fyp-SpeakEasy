    document.getElementById("Phonemes").addEventListener("click", function () {
        window.location.href = "phonemes"; // Redirect to the lessons.html page
    });
    document.getElementById("Words").addEventListener("click", function () {
        window.location.href = "words"; // Redirect to the lessons.html page
    }); document.getElementById("Sentences").addEventListener("click", function () {
        window.location.href = "sentences"; // Redirect to the sentences.html page
    });
</script>
</html>