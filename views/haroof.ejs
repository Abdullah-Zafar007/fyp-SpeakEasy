  </section>

  <button id="practiceBtn">🔊 مشق کریں</button>
  <div id="feedback"></div>
  <audio id="audioPlayer"></audio>


  <script>
    const cards = document.querySelectorAll('.card');
    let selectedLetter = '';
    let expectedSpokenName = '';
    const feedbackDiv = document.getElementById('feedback');
    const audioPlayer = document.getElementById('audioPlayer');

    // Map each letter to its correct spoken form
    const letterToName = {
      "ا": "الف", "ب": "بے", "پ": "پے", "ت": "تے", "ٹ": "ٹے", "ث": "ثے",
      "ج": "جیم", "چ": "چے", "ح": "حے", "خ": "خے", "د": "دال", "ڈ": "ڈال",
      "ذ": "ذال", "ر": "رے", "ڑ": "ڑے", "ز": "زے", "ژ": "ژے", "س": "سین",
      "ش": "شین", "ص": "صاد", "ض": "ضاد", "ط": "طے", "ظ": "ظے", "ع": "عین",
      "غ": "غین", "ف": "فے", "ق": "قاف", "ک": "کاف", "گ": "گاف", "ل": "لام",
      "م": "میم", "ن": "نون", "و": "واؤ", "ہ": "ہے", "ء": "ہمزہ", "ی": "یے", "ے": "بڑی یے"
    };

    // Normalization: handle common confusions
    function normalizeText(text) {
      // Normalize full words
      text = text.replace(/حمزہ/g, 'ہمزہ');
      text = text.replace(/یے/g, 'یہ');
      text = text.replace(/قاف/g, 'کاف');
      // Normalize individual letters
      const map = {
        'ق': 'ک', 'ح': 'ہ', 'ھ': 'ہ', 'ے': 'ی'
      };
      let result = '';
      for (let ch of text) {
        result += map[ch] || ch;
      }
      return result;
    }

    cards.forEach(card => {
      card.addEventListener('click', () => {
        selectedLetter = card.dataset.letter;
        expectedSpokenName = letterToName[selectedLetter] || selectedLetter;
        feedbackDiv.innerText = `منتخب حرف: "${selectedLetter}" (${expectedSpokenName})`;
        audioPlayer.src = card.dataset.audio;
        audioPlayer.play();
      });
    });

    document.getElementById('practiceBtn').addEventListener('click', () => {
      if (!selectedLetter) {
        feedbackDiv.innerText = 'براہ کرم پہلے کوئی حرف منتخب کریں۔';
        return;
      }
      if (!('webkitSpeechRecognition' in window)) {
        alert('آپ کا براؤزر سپیچ ریکگنیشن کو سپورٹ نہیں کرتا۔');
        return;
      }
      const recognition = new webkitSpeechRecognition();
      recognition.lang = 'ur-PK';
      recognition.interimResults = false;
      recognition.maxAlternatives = 1;
      feedbackDiv.innerText = '🎤 سن رہا ہے... براہ کرم حرف بولیں';
      recognition.start();
      recognition.onresult = (event) => {
        const spokenRaw = event.results[0][0].transcript.trim();
        const spoken = normalizeText(spokenRaw);
        const expectedNorm = normalizeText(expectedSpokenName);
        if (spoken === expectedNorm) {
          feedbackDiv.innerHTML = `✅ آپ نے درست بولا: "${spokenRaw}"`;
        } else {
          feedbackDiv.innerHTML = `❌ آپ نے "${spokenRaw}" بولا۔ درست ادائیگی: "${expectedSpokenName}"`;
        }
      };
      recognition.onerror = (event) => {
        feedbackDiv.innerText = `⚠️ خامی: ${event.error}`;
      };
    });
  </script>
   <%- include('partials/footer') %>

</body>
</html>
