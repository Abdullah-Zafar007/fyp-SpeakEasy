 :root {
    --primary-color: #008080;
    --secondary-color: #e9f5f5;
    --text-color: #3b3b3b;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Poppins', sans-serif;
    background: #FFFFFF;
    min-height: 100vh;
    overflow-x: hidden;
}

.container {
    display: flex;
    width: 100%;
    min-height: 100vh;
    color: var(--text-color);
}

/* Sidebar */
.sidebar {
    width: 12%;
    background: var(--primary-color);
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    transition: width 0.3s ease;
}

.logo {
    font-size: 26px;
    font-weight: bold;
    margin-bottom: 40px;
    text-align: center;
    color: white;
    position: relative;
}



/* Menu */
.menu {
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 100%;
}

.menu-item {
    font-size: 18px;
    cursor: pointer;
    padding: 10px 5px;
    text-align: center;
    border-radius: 5px;
    transition: background 0.3s ease, color 0.3s ease;
}

.menu-item:hover,
.menu-item.active {
    background: white;
    color: var(--primary-color);
}

/* Content */
.content {
    flex: 1;
    background: var(--secondary-color);
    padding: 40px 60px;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
}

.header {
    margin-bottom: 30px;
    margin-top: 20px;
}

.header h2 {
    font-size: 36px;
    color: var(--primary-color);
}

.header p {
    font-size: 16px;
    color: #7a7a7a;
    margin-top: 5px;
}

/* Main Card */
.main-card {
    background: white;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--primary-color);
    margin-bottom: 20px;
    display: none;
}

.main-card.active {
    display: block;
}

/* Cards Grid */
.cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 20px;
}

.card {
    background: white;
    border-radius: 10px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--primary-color);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

/* ========================
   Responsive Design
========================= */

/* Tablets and smaller */
@media screen and (max-width: 992px) {
    .sidebar {
        width: 18%;
    }

    .content {
        padding: 30px 40px;
    }

    .header h2 {
        font-size: 28px;
    }

    .card {
        font-size: 1rem;
    }

    .main-card {
        font-size: 1.2rem;
    }
}

/* Mobile View */
@media screen and (max-width: 768px) {
    .container {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        padding: 10px;
    }

    .menu {
        flex-direction: row;
        gap: 10px;
    }

    .logo {
        display: none;
    }

    .content {
        padding: 20px;
    }

    .header h2 {
        font-size: 24px;
    }

    .cards {
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    }
}


    </style>
